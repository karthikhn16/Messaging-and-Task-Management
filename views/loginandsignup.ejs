</head>
<body> 
    <div class="cont">
        <div class="form sign-in">
            <h2>Sign In</h2>
                                <!-- FORM FOR SIGN IN -->
            <form action="/postlogin" method="post" id="loginform">                   
            <label>
                <span>Name</span>
                <input type="text" name="name" id="name">
            </label>
            <label>
                <span>Password</span>
                <input type="password" name="password" id="passwordlogin">
            </label>
            <button class ="submit" type="submit"> Sign In</button>
            </form> 
            <p class="forgot-pass"> Forgot Password ?</p>
            <div class="social-media">
                <ul>
                    <li><img src="/images/facebook.png"></li>
                    <li><img src=" /images/instagram.png"></li>
                    <li><img src=" /images/linkedin.png"></li>
                    <li><img src=" /images/twitter.png"></li>

                </ul>
            </div>
        </div>
        <div class="sub-cont">
            <div class="img">
                <div class="img-text m-up">
                    <h2>New here?</h2>
                    <p> Sign up and discover great amout of new opportunities@!</p>
                </div>
                <div class="img-text m-in">
                    <h2>One of us?</h2>
                    <p>if you already has an account,just sign in.We missed you!</p>

                </div>
                <div class="img-btn">
                <span class="m-up">Sign Up</span>
                <span class ="m-in">Sign In</span>
            </div>
        </div>
        <div class="form sign-up">
        <h2>Sign up</h2>
                <!-- FORM FOR SIGNUP -->
        <form method="post" action="/register-login">
        <label>
            <span>Name</span>
            <input id="name" name="name" type="text" >
        </label>
        <label>
            <span>Email</span>
            <input id="email" name="email" type="email">
        </label>
        <label>
            <span>Password</span>
            <input id="password" name="password" type="password">
        </label>
        <label>
            <span>Confirm Password</span>
            <input  id="confirmpassword" name="confirmpassword" type="password">
        </label>
        <button  type="submit" class="submit">Sign Up Now </button>
        </form>   
                            <!-- END OF FORM -->
    </div>
  </div>
</div>
<script >
    document.querySelector('.img-btn').addEventListener('click', function()
	{
		document.querySelector('.cont').classList.toggle('s-signup')
	}
);

</script>

 <script> 
    document.getElementById('loginform').addEventListener('submit', async function(event) {
   

   const name = document.getElementById('name').value;
  const password = document.getElementById('passwordlogin').value;

  const response = await fetch('/postlogin', {
	method: 'POST',
	headers: {
	  'Content-Type': 'application/json'
	},
	body: JSON.stringify({ name, password })
  });

  const data = await response.json();
  console.log(response)

  if (response) {
	window.location.replace("http://localhost:3000/inbox");

  } else {
	alert(data.message);
  }
});
 </script> 


</body>
