<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Chat</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    
        <div class="navbar">
            <a href="/">Home</a>
            <a href="/tasks"> Manage Tasks</a>
            <a href="/register-login"> Message</a>
            <a href="/inbox">Inbox</a>
            <a href="/about">About</a>
        </div>
        
        <div class="container">

        <h1>Welcome, <%= currentUser %></h1>
        

        <h2>Tasks Assigned For me:</h2>
        <form action="/taskcomp"  method ="post" >
        <% for (let i = 0; i < tasklist.length; i++) { %>
          <div class="task">
            
            <label>
                <input type="checkbox" id="checkbox<%= i %>" class="myCheckbox"  name="checkboxValues" value=" <%= tasklist[i].task%>">
              <%= tasklist[i].task %>
          
            </label>
          </div>
        <% }; %>
        <button type="submit">Save Changes</button>
        </form>

        <br>
        <br>

        <h2>Assign a Task</h2>

        <form id="TaskForm" method="post" action="/posttasksubmission">
            <input type="text" id="messageInput"  name="taskdata" placeholder="Assign a Task...">
            <br><br>
            <div>
                <h2>Select Recipient:</h2>
                <select id="recipientSelect" name="to">
                    <option value="all">All Users</option>
                    <% users.forEach(user => { %>
                        <option value="<%= user %>"><%= user %></option>
                    <% }); %>
                </select>
            </div>

            <button type="submit">Send</button>
        </form>
    </div>
    <script>
        const currentUser = '<%= currentUser %>'
    </script>
</body>
</html>
